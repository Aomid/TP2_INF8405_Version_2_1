<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/mini_place_layout"
    android:padding="@dimen/padd_mini"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/picture"
        android:id="@+id/mini_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/mini_place_name"
            android:textSize="@dimen/mini_name"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/isTheyParticipating"
            android:visibility="gone"
            android:id="@+id/mini_participate"
            android:layout_height="match_parent" />
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:gravity="right"
        android:visibility="visible"
        android:id="@+id/mini_description"
        android:layout_height="match_parent" />

</LinearLayout>