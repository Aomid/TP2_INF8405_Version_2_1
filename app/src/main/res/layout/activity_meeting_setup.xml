<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.abbas.tp2_inf8405_version_2_1.Meeting_Setup"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_weight="0.15"
            app:srcCompat="@mipmap/userprofiledefaul" />

        <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.31"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@drawable/button_border_2"
        android:text="" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

        <EditText
            android:id="@+id/meetingName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Meeting Name"
            android:textColor="@color/dark"
            android:textColorHint="@color/light_grey" />

        <Button
            android:id="@+id/create_meeting_button"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:background="@drawable/button_border_2"
            android:onClick="groupManager"
            android:text="Search Meeting"
            android:textColor="@color/white" />
        </LinearLayout>

    <ListView
        android:id="@+id/meetingInfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/layout_border"
        android:padding="8dp"></ListView>

    <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

    <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

</LinearLayout>

